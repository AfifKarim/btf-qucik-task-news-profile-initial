<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <!-- Horizontal LinearLayout for left-right layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- Left side: Title & Description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start"/>

            <TextView
                android:id="@+id/taskDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task description goes here"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:gravity="start"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/taskCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created at: 16 Nov 2025"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginTop="4dp"
                android:gravity="start"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/LightSlateGray"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <!-- Right side: Priority & Due Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/taskPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/taskStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/taskDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 20 Nov 2025"
                android:textSize="12sp"
                android:textStyle="italic"
                android:gravity="start"
                android:textColor="?android:attr/textColorSecondary"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
